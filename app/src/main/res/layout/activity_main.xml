<?xml version="1.0" encoding="utf-8"?>
<com.cy.refreshlayoutniubility.RefreshLayoutNiubility xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/baseRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.cy.refreshlayoutniubility.LoadingLayout
            android:id="@+id/loadinglayout"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <com.cy.refreshlayoutniubility.LoadingLayout
            android:id="@+id/loadinglayout2"
            android:layout_width="match_parent"
            android:layout_height="100dp" />
    </LinearLayout>

</com.cy.refreshlayoutniubility.RefreshLayoutNiubility>